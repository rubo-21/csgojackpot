.b-main
	min-height 90%
	margin auto
	padding-bottom 80px
	&__links
		position fixed
		right 0
		z-index 100
		text-align center
		color #fff
	&__login-button
		display inline-block
		top 54px
		margin-bottom 0
		padding 8px 12px
		border-top 0 none
		border-radius 0 0 0 10px
		background-image linear-gradient(#e08b27, #d9831f 6%, #cc7b1d)
		background-repeat no-repeat
		background-color #d9831f
		cursor pointer
		user-select none
		-moz-user-select none
		filter none
		vertical-align middle
		text-decoration none
		white-space nowrap
		font-weight normal

	&__link-block
		width 125px
		padding 5px
		border-width: 1px 0px 1px 1px
		border-style: solid none solid solid
		border-color: #000 -moz-use-text-color #000 #000
		border-top-colors none
		border-right-colors none
		border-bottom-colors none
		border-left-colors none
		border-image none
		border-radius 10px 0px 0px 10px
		background transparent linear-gradient(to bottom, #45484D 0px, #000 100%) repeat scroll 0% 0%
		font-size 10px
		& a
			color #fff
			cursor pointer
			text-decoration none
		& img
			width 115px
			vertical-align middle
			border 0px none

	&__analyst-backlink
		top 95px
	&__opskins
		top 162px
		& img
			width 95%

	&__content
		width 100%
		margin 0 auto
		padding 0 15px
		& > div
			width 50%
			float left
	&__alert
		margin-top 15px
		border: 0px none;
		background-color: #D9EDF7;
		color: #3A87AD;
		padding: 15px;
		margin-bottom: 18px;
		border-radius: 4px;
		& b
			font-weight bold
	&__queue-message
		font-weight bold

	&__activity-status
		height 299px
